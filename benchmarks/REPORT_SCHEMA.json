{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RAG Evaluation Report Schema",
  "description": "Schema for comparison reports that compare a test run against a benchmark",
  "version": "2.0",
  "type": "object",
  "required": [
    "schema_version",
    "report_id",
    "generated_date",
    "benchmark",
    "test",
    "comparison",
    "summary"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "example": "2.0"
    },
    "report_id": {
      "type": "string",
      "description": "Report identifier (e.g., R001, R002)",
      "example": "R002"
    },
    "generated_date": {
      "type": "string",
      "format": "date",
      "example": "2025-12-19"
    },
    "generated_timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "client": {
      "type": "string",
      "example": "BFAI"
    },
    "benchmark": {
      "type": "object",
      "description": "Reference to the benchmark being compared against",
      "properties": {
        "version": { "type": "string", "example": "1.3" },
        "type": { "type": "string", "enum": ["local", "cloud"] },
        "file": { "type": "string" },
        "date": { "type": "string", "format": "date" }
      }
    },
    "test": {
      "type": "object",
      "description": "The test run being evaluated",
      "properties": {
        "run_id": { "type": "string" },
        "type": { "type": "string", "enum": ["local", "cloud"] },
        "file": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      }
    },
    "config_match": {
      "type": "object",
      "description": "Configuration comparison between benchmark and test",
      "properties": {
        "all_matched": { "type": "boolean" },
        "parameters": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "benchmark": { },
              "test": { },
              "match": { "type": "boolean" }
            }
          }
        }
      }
    },
    "comparison": {
      "type": "object",
      "description": "Metric-by-metric comparison",
      "properties": {
        "metrics": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "benchmark": { "type": "number" },
              "test": { "type": "number" },
              "delta": { "type": "number" },
              "delta_pct": { "type": "number" },
              "status": { "type": "string", "enum": ["match", "improvement", "regression"] }
            }
          }
        },
        "latency": {
          "type": "object",
          "properties": {
            "total": {
              "type": "object",
              "properties": {
                "benchmark": { "type": "number" },
                "test": { "type": "number" },
                "delta": { "type": "number" },
                "speedup": { "type": "number" }
              }
            },
            "client_experience": {
              "type": "object",
              "properties": {
                "benchmark": { "type": "number" },
                "test": { "type": "number" },
                "delta": { "type": "number" },
                "speedup": { "type": "number" }
              }
            }
          }
        },
        "cost": {
          "type": "object",
          "properties": {
            "total": {
              "type": "object",
              "properties": {
                "benchmark": { "type": "number" },
                "test": { "type": "number" },
                "delta": { "type": "number" }
              }
            },
            "per_question": {
              "type": "object",
              "properties": {
                "benchmark": { "type": "number" },
                "test": { "type": "number" },
                "delta": { "type": "number" }
              }
            }
          }
        },
        "breakdown_by_type": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "benchmark_pass_rate": { "type": "number" },
              "test_pass_rate": { "type": "number" },
              "delta": { "type": "number" }
            }
          }
        },
        "breakdown_by_difficulty": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "benchmark_pass_rate": { "type": "number" },
              "test_pass_rate": { "type": "number" },
              "delta": { "type": "number" }
            }
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "properties": {
        "verdict": {
          "type": "string",
          "enum": ["PASS", "WARN", "FAIL"],
          "description": "Overall verdict: PASS=no regressions, WARN=minor regressions, FAIL=major regressions"
        },
        "regressions": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of metrics that regressed"
        },
        "improvements": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of metrics that improved"
        },
        "key_finding": {
          "type": "string",
          "description": "One-line summary of the comparison"
        },
        "recommendation": {
          "type": "string",
          "description": "Recommended action based on results"
        }
      }
    },
    "failures": {
      "type": "object",
      "properties": {
        "benchmark_only": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Questions that failed in benchmark but passed in test"
        },
        "test_only": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Questions that failed in test but passed in benchmark (new failures)"
        },
        "both": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Questions that failed in both"
        }
      }
    },
    "files": {
      "type": "object",
      "properties": {
        "benchmark_json": { "type": "string" },
        "test_json": { "type": "string" },
        "report_json": { "type": "string" },
        "report_markdown": { "type": "string" }
      }
    }
  }
}
