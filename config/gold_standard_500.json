{
  "job_name": "gold_standard_500",
  "description": "Build 500 gold-standard questions (all score 5) with full eval suite comparison",
  
  "corpus": {
    "input_file": "corpus/qa_corpus_v2.json",
    "output_file": "corpus/qa_corpus_gold_500.json",
    "target_count": 500,
    "min_relevance_score": 5,
    "distribution": {
      "single_hop": {"easy": 83, "medium": 83, "hard": 84},
      "multi_hop": {"easy": 83, "medium": 83, "hard": 84}
    }
  },
  
  "generation": {
    "buffer_multiplier": 2.0,
    "max_retries": 5,
    "checkpoint_interval": 10
  },
  
  "evaluation": {
    "runs": [
      {
        "name": "precision_25",
        "recall_k": 100,
        "precision_k": 25,
        "use_mmr": true,
        "dimensions": ["faithfulness", "relevance", "correctness", "completeness", "coherence"]
      },
      {
        "name": "precision_12",
        "recall_k": 100,
        "precision_k": 12,
        "use_mmr": true,
        "dimensions": ["faithfulness", "relevance", "correctness", "completeness", "coherence"]
      }
    ]
  },
  
  "output": {
    "reports_dir": "reports/gold_standard_500",
    "generate_executive_summary": true,
    "generate_comparison_report": true
  }
}
